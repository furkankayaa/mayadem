@model List<App.Library.GenreDetail>
@{
    ViewData["Title"] = "Home Page";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            
            <ul class="navbar-nav flex-grow-1">
                <li>
                    <a class="nav-link text-dark" asp-controller="home" asp-action="Index" asp-route-categoryId="">All Categories</a>
                </li>
                @foreach (var i in Model)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="index" asp-route-categoryId="@i.GenreID">@i.CategoryName</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="container">

    @if (ViewBag.category != null)
    {
        @await Component.InvokeAsync("CategoryQuery", ViewBag.category)                                                                       
    }
    else
    {
        @await Component.InvokeAsync("CategoryQuery", null)
    }
</div>